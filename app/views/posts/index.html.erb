<div id="page_wrapper">
<% @posts.each do|post| %>
  <h1><%= link_to post.title, post %></h1>
  <h2><%=post.created_at%></h2>
  
  <p style="color: darkgreen;">
  <%=link_to "Edit", edit_post_path(post)%> |
  <%=link_to "Delete",post, :confirm => "Are u sure?", :method => :delete %>

  </p>
  <hr/>
  <%end%>

  
 
</div>